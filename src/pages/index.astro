        <main>
            <!-- Search & Filter -->
            <div class="mb-8">
                <div class="flex flex-col md:flex-row gap-4">
                    <!-- Search -->
                    <div class="flex-1 relative">
                        <input
                            type="text"
                            id="search"
                            placeholder="Search tools..."
                            class="w-full bg-gray-900 border border-gray-800 rounded-lg px-4 py-3 pl-12 text-white placeholder-gray-500 focus:outline-none focus:border-yellow-400 transition"
                        />
                        <svg class="w-5 h-5 text-gray-500 absolute left-4 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>

                    <!-- Filter by Status -->
                    <select
                        id="status-filter"
                        class="bg-gray-900 border border-gray-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition"
                    >
                        <option value="">All Status</option>
                        <option value="production">Production</option>
                        <option value="beta">Beta</option>
                        <option value="development">Development</option>
                    </select>
                </div>
            </div>

            <!-- Loading State -->
            <div id="loading" class="text-center py-12">
                <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-yellow-400"></div>
                <p class="mt-4 text-gray-400">Loading tools...</p>
            </div>

            <!-- Error State -->
            <div id="error" class="hidden text-center py-12">
                <div class="text-red-400 text-xl mb-2">‚ùå Failed to load tools</div>
                <p class="text-gray-400">Check console for details</p>
            </div>

            <!-- Tools Grid -->
            <div id="tools-grid" class="hidden grid md:grid-cols-2 lg:grid-cols-3 gap-6 items-stretch">
                <!-- Tools will be injected here -->
            </div>

            <!-- No Results -->
            <div id="no-results" class="hidden text-center py-12">
                <div class="text-gray-400 text-xl mb-2">üîç No tools found</div>
                <p class="text-gray-500">Try adjusting your search or filters</p>
            </div>
        </main>

        <!-- Ecosystem Footer -->
        <div class="ecosystem">
            <h3>UCLI Tools Ecosystem</h3>
            <p>Professional CLI tools for developers</p>

            <div class="ecosystem-grid">
                <a href="https://ucli.tools" class="ecosystem-item">
                    <div class="ecosystem-content">
                        <svg class="ecosystem-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span class="ecosystem-title">UCLI Tools</span>
                    </div>
                    <p class="ecosystem-url">ucli.tools</p>
                </a>

                <a href="https://install.ucli.tools" class="ecosystem-item">
                    <div class="ecosystem-content">
                        <svg class="ecosystem-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        <span class="ecosystem-title">Install</span>
                    </div>
                    <p class="ecosystem-url">install.ucli.tools</p>
                </a>

                <div class="ecosystem-item current">
                    <div class="current-badge">You are here</div>
                    <div class="ecosystem-content">
                        <svg class="ecosystem-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <span class="ecosystem-title">Registry</span>
                    </div>
                    <p class="ecosystem-url">registry.ucli.tools</p>
                </div>

                <a href="https://docs.ucli.tools" class="ecosystem-item">
                    <div class="ecosystem-content">
                        <svg class="ecosystem-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                        <span class="ecosystem-title">Documentation</span>
                    </div>
                    <p class="ecosystem-url">docs.ucli.tools</p>
                </a>
            </div>
        </div>
    </div>

    <script>
        // Fetch tools from registry API
        const REGISTRY_URL = '/api/apps.json';
        let allTools = [];

        async function fetchTools() {
            try {
                const response = await fetch(REGISTRY_URL);
                const tools = await response.json();
                return tools;
            } catch (error) {
                console.error('Failed to fetch tools:', error);
                throw error;
            }
        }

        function renderTool(tool) {
            const statusColor = tool.status === 'production' ? 'green' : tool.status === 'beta' ? 'yellow' : 'gray';

            return `
                <div class="tool-card">
                    <div class="tool-header">
                        <div class="tool-icon">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div class="tool-name">${tool.name}</div>
                        <div class="tool-status">${tool.status}</div>
                    </div>
                    <p class="tool-description">${tool.description || 'No description available'}</p>
                    <div class="tool-tags">
                        ${tool.tags?.map(tag => `<span class="tool-tag">${tag}</span>`).join('') || ''}
                    </div>
                    <div class="tool-actions">
                        <a href="https://docs.ucli.tools/tools/${tool.name}" class="btn btn-primary">View Docs</a>
                        <button onclick="copyInstallCommand('${tool.name}')" class="btn btn-secondary">Copy Install</button>
                    </div>
                </div>
            `;
        }

        function filterTools() {
            const searchQuery = document.getElementById('search').value.toLowerCase();
            const statusFilter = document.getElementById('status-filter').value;

            const filtered = allTools.filter(tool => {
                const matchesSearch = !searchQuery ||
                    tool.name.toLowerCase().includes(searchQuery) ||
                    tool.description?.toLowerCase().includes(searchQuery) ||
                    tool.tags?.some(tag => tag.toLowerCase().includes(searchQuery));

                const matchesStatus = !statusFilter || tool.status === statusFilter;

                return matchesSearch && matchesStatus;
            });

            const grid = document.getElementById('tools-grid');
            const noResults = document.getElementById('no-results');

            if (filtered.length === 0) {
                grid.classList.add('hidden');
                noResults.classList.remove('hidden');
            } else {
                grid.classList.remove('hidden');
                noResults.classList.add('hidden');
                grid.innerHTML = filtered.map(renderTool).join('');
            }
        }

        window.copyInstallCommand = function(toolName) {
            const command = `ucli build ${toolName}`;
            navigator.clipboard.writeText(command);

            // Show toast notification
            showToast(`Copied: ${command}`);
        };

        function showToast(message) {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = 'fixed bottom-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-slide-up';
            toast.textContent = message;

            // Add to page
            document.body.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateY(1rem)';
                toast.style.transition = 'all 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Initialize
        async function init() {
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const grid = document.getElementById('tools-grid');

            try {
                allTools = await fetchTools();

                // Update stats
                const official = allTools.filter(t => t.type === 'official').length;
                const community = allTools.filter(t => t.type === 'community').length;

                document.querySelector('.stat-number').textContent = allTools.length;
                document.querySelectorAll('.stat-number')[1].textContent = official;
                document.querySelectorAll('.stat-number')[2].textContent = community;

                // Render tools
                loading.classList.add('hidden');
                filterTools();

                // Setup event listeners
                document.getElementById('search').addEventListener('input', filterTools);
                document.getElementById('status-filter').addEventListener('change', filterTools);

            } catch (err) {
                loading.classList.add('hidden');
                error.classList.remove('hidden');
                console.error('Error loading tools:', err);
            }
        }

        // Run on load
        init();
    </script>
</body>
