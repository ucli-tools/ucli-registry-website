    <!-- Submit Tool CTA -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 md:p-12 shadow-2xl border border-white/20 text-center">
            <h2 class="text-3xl font-bold mb-4 text-white">Have a useful CLI tool?</h2>
