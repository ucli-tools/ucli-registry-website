    <script>
        // Fetch tools from UCLI Registry
        const REGISTRY_URL = '/api/apps.json';
        let allTools = [];

        async function fetchTools() {
            try {
                const response = await fetch(REGISTRY_URL);
                const tools = await response.json();
                return tools;
            } catch (error) {
                console.error('Failed to fetch tools:', error);
                throw error;
            }
        }

        function renderTool(tool) {
            const statusColor = tool.status === 'production' ? 'green' : tool.status === 'beta' ? 'yellow' : 'gray';
            const typeColor = 'orange';

            return `
                <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl p-6 hover:border-${typeColor}-400/60 transition group flex flex-col h-full">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-2">
                                <h3 class="text-xl font-bold text-white group-hover:text-${typeColor}-200 transition">${tool.name}</h3>
                                <span class="text-xs px-2 py-1 bg-${typeColor}-600/80 rounded text-white font-semibold">Official</span>
                            </div>
                            <p class="text-white/80 text-sm mb-3">${tool.description || 'No description available'}</p>
                        </div>
                    </div>

                    <div class="flex flex-wrap gap-2 mb-4 min-h-[32px]">
                        <span class="text-xs px-2 py-1 bg-${statusColor}-600/30 text-${statusColor}-200 rounded border border-${statusColor}-400/40">
                            ${tool.status}
                        </span>
                        ${tool.tags?.slice(0, 3).map(tag =>
                            `<span class="text-xs px-2 py-1 bg-white/20 text-white/80 rounded">${tag}</span>`
                        ).join('') || ''}
                        ${tool.tags?.length > 3 ? `<span class="text-xs px-2 py-1 bg-white/20 text-white/70 rounded cursor-help" title="${tool.tags.slice(3).join(', ')}">+${tool.tags.length - 3} more</span>` : ''}
                    </div>

                    <div class="flex gap-2 mt-auto">
                        <button
                            onclick="copyInstallCommand('${tool.name}')"
                            class="flex-1 px-4 py-2 bg-${typeColor}-600 hover:bg-${typeColor}-500 rounded-lg font-medium transition text-white text-sm"
                        >
                            Copy Install Command
                        </button>
                        <a
                            href="https://${tool.repo}"
                            target="_blank"
                            class="px-4 py-2 bg-white/20 hover:bg-white/30 rounded-lg transition text-white text-sm flex items-center gap-2 backdrop-blur-sm"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.840 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            View
                        </a>
                    </div>
                </div>
            `;
        }

        function filterTools() {
            const searchQuery = document.getElementById('search').value.toLowerCase();
            const statusFilter = document.getElementById('status-filter').value;

            const filtered = allTools.filter(tool => {
                const matchesSearch = !searchQuery ||
                    tool.name.toLowerCase().includes(searchQuery) ||
                    tool.description?.toLowerCase().includes(searchQuery) ||
                    tool.tags?.some(tag => tag.toLowerCase().includes(searchQuery));

                const matchesStatus = !statusFilter || tool.status === statusFilter;

                return matchesSearch && matchesStatus;
            });

            const grid = document.getElementById('apps-grid');
            const noResults = document.getElementById('no-results');

            if (filtered.length === 0) {
                grid.classList.add('hidden');
                noResults.classList.remove('hidden');
            } else {
                grid.classList.remove('hidden');
                noResults.classList.add('hidden');
                grid.innerHTML = filtered.map(renderTool).join('');
            }
        }

        window.copyInstallCommand = function(toolName) {
            const command = `ucli build ${toolName}`;
            navigator.clipboard.writeText(command);

            // Show toast notification
            showToast(`Copied: ucli build ${toolName}`);
        };

        function showToast(message) {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = 'fixed bottom-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-slide-up';
            toast.textContent = message;

            // Add to page
            document.body.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateY(1rem)';
                toast.style.transition = 'all 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Initialize
        async function init() {
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const grid = document.getElementById('apps-grid');

            try {
                allTools = await fetchTools();

                // Update stats
                const official = allTools.filter(a => a.type === 'official').length;
                const community = allTools.filter(a => a.type === 'community').length;

                document.getElementById('total-apps').textContent = allTools.length;
                document.getElementById('official-apps').textContent = official;
                document.getElementById('community-apps').textContent = community;

                // Render apps
                loading.classList.add('hidden');
                filterTools();

                // Setup event listeners
                document.getElementById('search').addEventListener('input', filterTools);
                document.getElementById('status-filter').addEventListener('change', filterTools);

            } catch (err) {
                loading.classList.add('hidden');
                error.classList.remove('hidden');
                console.error('Error loading tools:', err);
            }
        }

        // Run on load
        init();
    </script>
</html>
