    <!-- Footer -->
    <footer class="border-t border-gray-800 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-gray-500 text-sm">
            <p>UCLI Tools Registry ‚Ä¢ Apache 2.0 License ‚Ä¢ Copyright 2025 UCLI Tools</p>
